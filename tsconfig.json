{
  "include": [
    "remix.env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/utils/firebase/db.server.ts"
, "app/firebase.sessions.server.tsx"  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2021"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2019",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  }
}
